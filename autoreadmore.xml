					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field showon="Enabled_Front_Page:1" name="{Enabled_Front_Page_options" maxrepeatlength="1" type="note" basetype="blockquote" class="no-box-shadow" label=""/>
