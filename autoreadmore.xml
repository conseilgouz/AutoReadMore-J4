				</field>
				<field showon="ImageAsHTML:1" name="csscode" default=".margin-h-8 {margin:8px;}" type="textarea" label="PLG_CONTENT_AUTOREADMORE_CSS_CODE_LABEL" description="PLG_CONTENT_AUTOREADMORE_CSS_CODE_DESC"/>

